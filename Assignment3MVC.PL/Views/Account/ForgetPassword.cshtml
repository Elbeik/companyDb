@model ForgetPasswordViewModel 
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<h1>Forget Password</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SendEmail" method="post">
			<div asp-validation-summary="All"></div>
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			
			<input type="submit" value="Sent To Reset Password">
		</form>
		<p><a asp-action="Login"> Back To Login Page!</a></p>
		
	</div>
</div>


@section vaildationScript{

	<partial name="_ValidationScriptsPartial" />

}

